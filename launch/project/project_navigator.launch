<launch>
  <arg name="v_max" default="0.5"/>
  <arg name="om_max" default="0.2"/>
  <arg name="robot_size" default="6"/>
  <arg name="kbd_flg" default='false'/>
  <arg name="stop_sign_time" default="2"/>
  <arg name="stop_min_dist" default="0.8"/>
  <arg name="crossing_time" default="5"/>

  <node pkg="asl_turtlebot" type="navigator.py" name="navigator" output="screen">
    <param name="v_max" value="$(arg v_max)"/>
    <param name="om_max" value="$(arg om_max)"/>
    <param name="robot_size" value="$(arg robot_size)"/>
    <param name="stop_sign_time" value="$(arg stop_sign_time)"/>
    <param name="stop_min_dist" value="$(arg stop_min_dist)"/>
    <param name="crossing_time" value="$(arg crossing_time)"/>
  </node>

  <node pkg="asl_turtlebot" type="switch.py" name="switch" output="screen">
    <param name="kbd_flg" value="$(arg kbd_flg)"/>
  </node>
</launch>
